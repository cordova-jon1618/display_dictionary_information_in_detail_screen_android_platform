<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DairyActivity">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search a word..."
        android:imeOptions="actionSearch"
        android:inputType="text" />

    <TextView
        android:id="@+id/wordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dairy"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/partOfSpeechTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Noun"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pronunciationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pronunciation: /dair-ee/"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pluralTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Plural: dairies"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/definitionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Definition: an establishment, as a room, building, or buildings, where milk and cream are kept and butter and cheese are made."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/exampleSentenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Example: Some meat and dairy products will be used as feed for livestock."
        android:textSize="18sp" />

</LinearLayout>